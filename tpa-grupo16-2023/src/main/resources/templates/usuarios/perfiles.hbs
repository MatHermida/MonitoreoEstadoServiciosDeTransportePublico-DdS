{{#partial "contenido" }}

    <h1 class="text-center mt-4">Tus Perfiles</h1>

    <ul class="list-group mt-4">
        {{#each perfiles}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1"><strong>Nickname:</strong> {{this.nickname}}</h5>
                </div>
                <div>
                    <a class="btn btn-primary" href="/usuarios/{{usuario_id}}/perfiles/{{this.id}}">
                        <i class="fas fa-arrow-right"></i> Acceder
                    </a>
                </div>
            </li>
        {{/each}}
    </ul>

    <div class="text-center mt-4">
        <a class="btn btn-primary" href="/usuarios/{{usuario_id}}/perfiles/crear">
            <i class="fas fa-plus"></i> Crear Perfil
        </a>
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-secondary" href="/rankings">
            <i class="fas fa-ranking-star"></i> Ver Rankings
        </a>
        <a class="btn btn-secondary" href="/incidentesCercanos">
            <i class="fas fa-location-dot"></i> Incidentes Cercanos
        </a>
        <a class="btn btn-secondary" href="/cargarDatos">
            <i class="fas fa-upload"></i> Cargar Entidades y Organismos
        </a>
    </div>

{{/partial}}
{{> templates/base }}
