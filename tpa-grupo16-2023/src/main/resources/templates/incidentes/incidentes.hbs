{{#partial "contenido"}}
    <h1 class="text-center mt-4">Lista de Incidentes</h1>
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id Incidente</th>
                <th>Servicio</th>
                <th>Establecimiento</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#each incidentes}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.getServicioNombre}}</td>
                    <td>{{this.getEstablecimientoNombre}}</td>
                    <td>
                        <a class="btn btn-primary" href="/incidentes/{{this.id}}">
                            <i class="fas fa-search"></i> Ver
                        </a>
                        <a class="btn btn-danger" href="/incidentes/{{this.id}}/cerrar">
                            <i class="fas fa-times"></i> Cerrar
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-primary" href="/incidentes/crear">
            <i class="fas fa-plus"></i> Crear Incidente
        </a>
    </div>
{{/partial}}
{{> templates/base }}
