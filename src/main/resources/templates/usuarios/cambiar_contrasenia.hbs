{{#partial "contenido"}}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Cambiar contraseña</div>
                    <div class="card-body">
                        <form method="POST" action="/usuarios/usuario/password">
                            <div class="mb-3">
                                <label for="contrasenia" class="form-label">Nueva contraseña</label>
                                <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Ingrese su nueva contraseña">
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="far fa-check-circle"></i> Aceptar</button>
                            <a class="btn btn-danger" href="/usuarios/usuario">
                                <i class="fa fa-times" aria-hidden="true"></i> Cancelar
                            </a>
                        </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/base }}