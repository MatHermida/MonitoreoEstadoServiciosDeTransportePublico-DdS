{{#partial "contenido"}}
    <div class="container mt-4">
        <h1 class="display-4">Entidades y Servicios de Interés</h1>

        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Entidades de Interés</h2>
                <ul class="list-group">
                    {{#each entidadesInteres}}
                        <li class="list-group-item">{{nombre}}</li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h2>Servicios de Interés</h2>
                <ul class="list-group">
                    {{#each serviciosInteres}}
                        <li class="list-group-item">{{nombre}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <h2>Agregar Entidad de Interés</h2>
                <form method="POST" action="/usuarios/usuario/entidad_interes">
                    <div class="input-group">
                        <select name="entidad" class="form-select">
                            {{#each todasLasEntidades}}
                                <option value="{{id}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <h2>Agregar Servicio de Interés</h2>
                <form method="POST" action="/usuarios/usuario/servicio_interes">
                    <div class="input-group">
                        <select name="servicio" class="form-select">
                            {{#each todosLosServicios}}
                                <option value="{{id}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/base}}
