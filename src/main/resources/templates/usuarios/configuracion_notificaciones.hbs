{{#partial "contenido"}}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Editar datos</div>
                    <div class="card-body">
                        <form method="POST" action="/usuarios/usuario/notificaciones">
                            <div class="mb-3">
                                <label for="medio" class="form-label">Medio</label>
                                <select class="form-select" id="medio" name="medio" autofocus>
                                        {{#unless usuario.notificador}}
                                        <option disabled selected value="">Medio de notificación</option>
                                        <option value="mail">Mail</option>
                                        <option value="wpp">Whatsapp</option>
                                        {{else}}
                                        {{#if usuario.notificarPorMail}}
                                        <option selected value="mail">Mail</option>
                                        <option value="wpp">Whatsapp</option>
                                        {{else}}
                                        <option selected value="wpp">Whatsapp</option>
                                        <option value="mail">Mail</option>
                                        {{/if}}
                                        {{/unless}}
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="configuracion" class="form-label">Configuracion</label>
                                <select class="form-select" id="configuracion" name="configuracion" onchange="ocultarOMostrarHorario()" onfocus="ocultarOMostrarHorario()" autofocus>
                                        {{#unless usuario.configuracionNotificacion}}
                                        <option disabled selected value="">Modo de notificación</option>
                                        <option value="CuandoSucede">Cuando sucede</option>
                                        <option value="SinApuros">Sin apuros</option>
                                        {{else}}
                                        {{#if usuario.tieneApuro}}
                                        <option selected value="CuandoSucede">Cuando sucede</option>
                                        <option value="SinApuros">Sin apuros</option>
                                        {{else}}
                                        <option selected value="SinApuros">Sin apuros</option>
                                        <option value="CuandoSucede">Cuando sucede</option>
                                        {{/if}}
                                        {{/unless}}
                                </select>
                            </div>
                            <div class="mb-3">
                            <a class="btn btn-primary" name="horarios" id="horarios" href="/usuarios/usuario/notificaciones/horarios">
                                <i class="fas fa-clock"></i> Horarios
                            </a>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="far fa-check-circle"></i> Aceptar</button>
                            <a class="btn btn-danger" href="/usuarios/usuario">
                                <i class="fas fa-times" aria-hidden="true"></i> Cancelar
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
    function ocultarOMostrarHorario() {
    var selectBox = document.getElementById("configuracion");
    var selectedValue = selectBox.options[selectBox.selectedIndex].value;
    if(selectedValue == "SinApuros") { document.getElementById("horarios").style.visibility = "visible" }
    if(selectedValue == "CuandoSucede") { document.getElementById("horarios").style.visibility = "hidden" }
    }
    </script>
{{/partial}}
{{> templates/base }}