{{#partial "contenido"}}
    <h1 class="text-center mt-4">Incidentes Cercanos</h1>
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Id Incidente</th>
                <th>Comunidad</th>
                <th>Establecimiento</th>
                <th>Servicio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#each incidentes}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.getComunidadNombre}}</td>
                    <td>{{this.getEstablecimientoNombre}}</td>
                    <td>{{this.getServicioNombre}}</td>
                    <td>{{this.getEstado}}</td>
                    <td>
                        <a class="btn btn-primary" href="/incidenteCercano/{{this.id}}">
                            <i class="fas fa-search"></i> Ver
                        </a>
                        {{#unless this.estaResuelto}}
                            <a class="btn btn-danger" href="/incidenteCercano/{{this.id}}/cerrar">
                                <i class="fas fa-times"></i> Cerrar
                            </a>
                        {{/unless}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}
{{> templates/base }}
